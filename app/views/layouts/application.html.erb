<!DOCTYPE html>
<html>
  <head>
    <title>RailsSimpleAirbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-white">
    <header class="d-flex py-3 px-3 mb-5 justify-content-between align-items-center bg-light">
      <span class="logo">Simple Airbnb</span>
      <%= link_to "Add a flat", new_flat_path, class: 'btn btn-primary' %>
    </header>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
